<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <filter>
        <whitelist>
            <directory>./src</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./tests</directory>
            </exclude>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="Suit test">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <php>
        <env name="DB_CONNECTION" value="sqlite"/>
    </php>
</phpunit>